@model Dish
<a asp-action="Index" asp-controller="Dish">Home</a>
<div class="text-center">
  <h1 class="text-center">@Model.Name</h1>
  <h3 class="text-center">@Model.Chef</h3>
  <hr>
</div>
<p>@Model.Description</p>
<p>Calories: @Model.Calories</p>
<p>Tastiness: @Model.Tastiness</p>

<form asp-action="DeleteDish" asp-controller="Dish" method="post">
  <input type="hidden" name="dishid" value="@Model.DishId">
  <button type="submit" class="btn btn-danger">Delete</button>
</form>
<br/>
<a href="/edit/@Model.DishId" class="btn btn-dark">Edit</a>